<div class="my-6">
  <h2 class="prose text-xl font-bold underline">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field mt-4">
      <%= f.label :username, class: "label text-md font-bold" %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "input input-bordered max-w-xs" %>
    </div>

    <div class="field mt-4">
      <%= f.label :password, class: "label text-md font-bold" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered max-w-xs" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "label text-md font-bold" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>